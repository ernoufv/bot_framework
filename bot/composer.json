{
    "name": "vernouf/bot_framework",
    "description": "A light PHP bot framework ready for Facebook Messenger & direct API usage",
    "keywords": ["bot", "framework"],
    "license": "WTFPL",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "google/cloud-dialogflow": "^0.10.0",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/lumen-framework": "5.8.*",
        "laravel/slack-notification-channel": "^2.0",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^7.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "_messaging/autoload_files.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
